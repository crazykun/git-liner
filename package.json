{
  "name": "git-liner",
  "displayName": "Git Liner",
  "description": "极简主义的Git行历史追踪工具，专注于精确的代码行和文件历史追溯。",
  "version": "1.0.3",
  "publisher": "crazykun",
  "author": {
    "name": "crazykun",
    "url": "https://github.com/crazykun"
  },
  "icon": "src/logo_optimized.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [],
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "history",
    "blame",
    "line history",
    "file history",
    "liner",
    "code traceability",
    "git log",
    "source control",
    "minimalist",
    "git graph companion"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/crazykun/git-liner.git"
  },
  "bugs": {
    "url": "https://github.com/crazykun/git-liner/issues"
  },
  "homepage": "https://github.com/crazykun/git-liner#readme",
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "gitLiner": [
        {
          "id": "gitLiner.lineHistoryView",
          "name": "行历史",
          "when": "gitOpenRepositoryCount != 0"
        },
        {
          "id": "gitLiner.fileHistoryView",
          "name": "文件历史",
          "when": "gitOpenRepositoryCount != 0"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "gitLiner.lineHistoryView",
        "contents": "显示当前行的Git修改历史\n\n[显示行历史](command:gitLiner.showLineHistory)\n\n或者在编辑器中右键选择相应选项。",
        "when": "gitOpenRepositoryCount != 0"
      },
      {
        "view": "gitLiner.fileHistoryView",
        "contents": "显示当前文件的Git修改历史\n\n[显示文件历史](command:gitLiner.showFileHistory)\n\n或者在编辑器中右键选择相应选项。",
        "when": "gitOpenRepositoryCount != 0"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitLiner",
          "title": "Git Liner",
          "icon": "$(git-commit)"
        }
      ]
    },
    "commands": [
      {
        "command": "gitLiner.showLineHistory",
        "title": "显示行修改历史",
        "category": "Git Liner",
        "icon": "$(symbol-method)"
      },
      {
        "command": "gitLiner.showFileHistory",
        "title": "显示文件修改历史",
        "category": "Git Liner",
        "icon": "$(file-text)"
      },
      {
        "command": "gitLiner.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "gitLiner.showCommitDiff",
        "title": "查看文件差异",
        "icon": "$(diff)"
      },
      {
        "command": "gitLiner.showLineCommitDiff",
        "title": "查看行级别差异",
        "icon": "$(symbol-line)"
      },
      {
        "command": "gitLiner.copyCommitHash",
        "title": "复制提交Hash",
        "icon": "$(copy)"
      },
      {
        "command": "gitLiner.focus",
        "title": "聚焦到Git Liner视图"
      },
      {
        "command": "gitLiner.loadMoreLineHistory",
        "title": "加载更多行历史",
        "icon": "$(refresh)"
      },
      {
        "command": "gitLiner.loadMoreFileHistory",
        "title": "加载更多文件历史",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "gitLiner.showLineHistory",
          "when": "gitOpenRepositoryCount != 0",
          "group": "gitLiner@1"
        },
        {
          "command": "gitLiner.showFileHistory",
          "when": "gitOpenRepositoryCount != 0",
          "group": "gitLiner@2"
        }
      ],
      "view/title": [
        {
          "command": "gitLiner.refresh",
          "when": "view == gitLiner.lineHistoryView || view == gitLiner.fileHistoryView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "gitLiner.showCommitDiff",
          "when": "(view == gitLiner.lineHistoryView || view == gitLiner.fileHistoryView) && viewItem == fileCommit",
          "group": "inline"
        },
        {
          "command": "gitLiner.showLineCommitDiff",
          "when": "view == gitLiner.lineHistoryView && viewItem == lineCommit",
          "group": "inline"
        },
        {
          "command": "gitLiner.copyCommitHash",
          "when": "(view == gitLiner.lineHistoryView || view == gitLiner.fileHistoryView) && (viewItem == commit || viewItem == fileCommit || viewItem == lineCommit)",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Git Liner",
      "properties": {
        "gitLiner.pageSize": {
          "type": "number",
          "default": 20,
          "description": "Number of commits to load per page",
          "minimum": 5,
          "maximum": 100
        },
        "gitLiner.cacheTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Cache timeout in milliseconds",
          "minimum": 1000,
          "maximum": 300000
        },
        "gitLiner.showStatusBar": {
          "type": "boolean",
          "default": false,
          "description": "Show Git Liner information in status bar"
        },
        "gitLiner.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh history when switching files"
        }
      }
    },
    "keybindings": [
      {
        "command": "gitLiner.showFileHistory",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus && gitOpenRepositoryCount != 0"
      },
      {
        "command": "gitLiner.showLineHistory",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus && gitOpenRepositoryCount != 0"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run lint",
    "package": "vsce package",
    "publish:vscode": "vsce publish",
    "publish:openvsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.1",
    "mocha": "^10.8.2",
    "prettier": "^3.6.2",
    "typescript": "^4.9.4"
  }
}
